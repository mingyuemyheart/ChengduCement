<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <include
        android:id="@+id/clTitle"
        layout="@layout/layout_title" />

    <TextView
        android:id="@+id/starPwd"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        android:text="*"
        android:textColor="@color/red"
        android:textSize="@dimen/level_4"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/clTitle" />

    <TextView
        android:id="@+id/pwdStr"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="2dp"
        android:text="请输入原密码"
        android:textColor="@color/text_color3"
        android:textSize="@dimen/level_4"
        app:layout_constraintBottom_toBottomOf="@+id/starPwd"
        app:layout_constraintStart_toEndOf="@+id/starPwd"
        app:layout_constraintTop_toTopOf="@+id/starPwd" />

    <EditText
        android:id="@+id/etPwd"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="20dp"
        android:background="@color/transparent"
        android:hint="请输入原密码"
        android:maxLength="16"
        android:textColor="@color/text_color3"
        android:textColorHint="@color/text_color2"
        android:textSize="@dimen/level_4"
        app:layout_constraintBottom_toBottomOf="@+id/pwdStr"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/pwdStr"
        app:layout_constraintTop_toTopOf="@+id/pwdStr" />

    <TextView
        android:id="@+id/divider4"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_marginTop="10dp"
        android:background="@color/light_gray"
        app:layout_constraintTop_toBottomOf="@+id/etPwd" />

    <TextView
        android:id="@+id/starNewPwd"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        android:text="*"
        android:textColor="@color/red"
        android:textSize="@dimen/level_4"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/divider4" />

    <TextView
        android:id="@+id/newpwdStr"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="2dp"
        android:text="设置登录密码"
        android:textColor="@color/text_color3"
        android:textSize="@dimen/level_4"
        app:layout_constraintBottom_toBottomOf="@+id/starNewPwd"
        app:layout_constraintStart_toEndOf="@+id/starNewPwd"
        app:layout_constraintTop_toTopOf="@+id/starNewPwd" />

    <EditText
        android:id="@+id/etNewPwd"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="20dp"
        android:background="@color/transparent"
        android:hint="请输入新密码"
        android:maxLength="16"
        android:textColor="@color/text_color3"
        android:textColorHint="@color/text_color2"
        android:textSize="@dimen/level_4"
        app:layout_constraintBottom_toBottomOf="@+id/newpwdStr"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/newpwdStr"
        app:layout_constraintTop_toTopOf="@+id/newpwdStr" />

    <TextView
        android:id="@+id/divider6"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_marginTop="10dp"
        android:background="@color/light_gray"
        app:layout_constraintTop_toBottomOf="@+id/etNewPwd" />

    <TextView
        android:id="@+id/starConfirm"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        android:text="*"
        android:textColor="@color/red"
        android:textSize="@dimen/level_4"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/divider6" />

    <TextView
        android:id="@+id/confirmStr"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="2dp"
        android:text="确认登录密码"
        android:textColor="@color/text_color3"
        android:textSize="@dimen/level_4"
        app:layout_constraintBottom_toBottomOf="@+id/starConfirm"
        app:layout_constraintStart_toEndOf="@+id/starConfirm"
        app:layout_constraintTop_toTopOf="@+id/starConfirm" />

    <EditText
        android:id="@+id/etPwdConfirm"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="20dp"
        android:background="@color/transparent"
        android:hint="请再次输入新密码"
        android:maxLength="16"
        android:textColor="@color/text_color3"
        android:textColorHint="@color/text_color2"
        android:textSize="@dimen/level_4"
        app:layout_constraintBottom_toBottomOf="@+id/confirmStr"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/confirmStr"
        app:layout_constraintTop_toTopOf="@+id/confirmStr" />

    <TextView
        android:id="@+id/divider5"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_marginTop="10dp"
        android:background="@color/light_gray"
        app:layout_constraintTop_toBottomOf="@+id/etPwdConfirm" />

    <TextView
        android:id="@+id/tvLogin"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginStart="25dp"
        android:layout_marginTop="25dp"
        android:layout_marginEnd="25dp"
        android:background="@drawable/selector_logout"
        android:gravity="center_vertical|center"
        android:orientation="horizontal"
        android:text="确认修改"
        android:textColor="@color/white"
        android:textSize="@dimen/level_2"
        app:layout_constraintTop_toBottomOf="@+id/divider5" />

</android.support.constraint.ConstraintLayout>